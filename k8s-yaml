  template:
    metadata:
      labels:
        app: democi
    spec:
      containers:
      - image: liugb1029/democi:<BUILD_TAG>
        imagePullPolicy: IfNotPresent
        name: democi
        env:
        - name: branch
          value: <BRANCH_NAME>
---
apiVersion: v1
